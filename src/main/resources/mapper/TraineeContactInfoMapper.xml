<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lukefitness.lukegymbackend.dao.TraineeContactInfoDao">
    <insert id="insertTraineeContactInfo" parameterType="int" >
        INSERT INTO trainee_contact_info (trainee_id)
        VALUES (#{trainee_id})
    </insert>

    <update id="updateTraineeContactInfo" parameterType="com.lukefitness.lukegymbackend.models.TraineeContactInfo" >
        UPDATE trainee_contact_info
        SET
            full_name = #{full_name},
            occupation = #{occupation},
            date_of_birth=#{date_of_birth},
            phone = #{phone},
            address = #{address},
            state = #{state},
            postal_code = #{postal_code},
            emergency_contact_name = #{emergency_contact_name},
            emergency_contact_phone = #{emergency_contact_phone}
        WHERE trainee_id = #{trainee_id}
    </update>
    
    <select id="getTraineeContactInfoByTraineeId" parameterType="int" resultType="com.lukefitness.lukegymbackend.models.TraineeContactInfo">
        SELECT * FROM trainee_contact_info WHERE trainee_id = #{trainee_id}
    </select>

    <delete id="deleteTraineeContactInfo" parameterType="int">
        DELETE FROM trainee_contact_info WHERE trainee_id = #{trainee_id}
    </delete>
</mapper>