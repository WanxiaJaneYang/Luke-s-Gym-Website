<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lukefitness.lukegymbackend.dao.UserDao">
    <insert id="registerUser" parameterType="com.lukefitness.lukegymbackend.models.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (name, password, email, user_type)
        VALUES (#{name}, #{password}, #{email}, #{user_type})
    </insert>

    <select id="getUserByName" parameterType="String" resultType="com.lukefitness.lukegymbackend.models.User">
        SELECT * FROM users WHERE name = #{name}
    </select>

    <select id="login" parameterType="String" resultType="com.lukefitness.lukegymbackend.models.User">
        SELECT * FROM users WHERE name = #{name} AND password = #{password}
    </select>
</mapper>


